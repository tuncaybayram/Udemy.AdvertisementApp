@model UserCreateModel
@{
    Layout = "_Layout";
}
<div class="mt-4">
    <form asp-action="SignUp" asp-controller="Account" method="post" class="p-4 w-75 mx-auto">
        <div class="mb-3">
            <label>Kullanıcı Adınız</label>
            <input asp-for="@Model.Username" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Adınız</label>
            <input asp-for="@Model.Firstname" class="form-control"/>
        </div>
        <div class="mb-3">
            <label>Soyadınız</label>
            <input asp-for="@Model.Lastname" class="form-control" />
        </div>
         <div class="mb-3">
            <select class="form-select" asp-items="@Model.Genders" name="@nameof(Model.GenderId)">
                <options value="0">Bir Cinsiyet Seçiniz</options>
            </select>
        </div>
        <div class="mb-3">
            <label>Telefon Numaranız</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" />
        </div>
         <div class="mb-3">
            <label>Parolanız</label>
            <input asp-for="@Model.Password"  type="password" class="form-control" />
        </div>
        <div class="mb-3">
            <label>Parolanız</label>
            <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
        </div>
    </form>
</div>